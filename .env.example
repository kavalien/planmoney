# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here

# Authorized Users (Telegram IDs)
# Get your ID from @userinfobot
AUTHORIZED_USER_1=your_telegram_id_here
AUTHORIZED_USER_2=partner_telegram_id_here

# Group Chat Configuration
# Set to true to allow bot usage in group chats
ALLOW_GROUP_CHAT=true
# Optional: specific group ID to restrict to (0 = any group allowed)
AUTHORIZED_GROUP_ID=0

# Google Sheets Configuration
GOOGLE_CREDENTIALS_FILE=path/to/your/service_account_credentials.json
GOOGLE_SPREADSHEET_ID=your_google_spreadsheet_id_here

# Optional: Webhook Configuration (for production)
WEBHOOK_URL=https://your-domain.com/webhook
WEBHOOK_PORT=8080

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=bot.log

# Database Configuration (if using SQLite for caching)
DATABASE_PATH=finance_bot.db

# Bot Configuration
DEFAULT_CURRENCY=RUB
TIMEZONE=Europe/Moscow